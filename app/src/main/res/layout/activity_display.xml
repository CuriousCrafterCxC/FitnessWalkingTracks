<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/displayTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:" />

    <TextView
        android:id="@+id/displayDistrict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="District:" />


    <ImageView
        android:id="@+id/url_map_picture"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/displayRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route"/>

    <TextView
        android:id="@+id/howtoaccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to access"/>

    <Button
        android:id="@+id/GPSLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web Page" />

    </LinearLayout>
</ScrollView>